<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/components/com_farmapp/models/fields">
		<field name="name" type="text" class="inputbox required"
			size="20" label="Name"
			description="Name of Bed" required="true"/>

		<field name="description" type="text" class="inputbox"
			size="20" label="Description"
			description="description"/>
		
		<field name="zone" type="zones" class="required list"
			size="1" label="Zone"
			description="Select the Zone" required="true">
			<option
				value="0">Select</option>
		</field>
		
		<field name="totalarea" type="text" class="inputbox int"
			size="20" label="Total Area (Square Feet)"
			description="Total Area in square feet" />
		
		<field name="notes" type="textarea" class="inputbox"
			size="10" label="Notes"
			description="notes" rows="2" cols="5"/>
		
		<field
			name="status"
			type="list"
			label="JSTATUS"
			description="status of the farm"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>


		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="Language of the bed"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="id" type="text" default="0" label="Id"
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>


	</fieldset>

	<fields name="options">
		<fieldset name="joptions" label="Options">
			

         	</fieldset>
	</fields>

</form>
