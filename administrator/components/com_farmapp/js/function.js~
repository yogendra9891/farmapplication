Joomla.submitbutton = function(task){		if (task == '')	{		return false;	}	else	{		var isValid=true;		var action = task.split('.');		if (action[0] != 'cancel' && action[0] != 'close')		{			var forms = $$('form.form-validate');			for (var i=0;i<forms.length;i++)			{				if (!document.formvalidator.isValid(forms[i]))				{					isValid = false;					break;				}			}		} 		if (isValid)		{			Joomla.submitform(task);			return true;		}		else		{			alert(Joomla.JText._('COM_FARMAPP_ERROR_UNACCEPTABLE','Some values are unacceptable'));			return false;		}	}}/* * js function for getting the beds onload of the page according to the Farm and Zone....... using in the crop tab editing time of a crop.. */function onloadbed(id){	var val=document.getElementById('farmzonecrop').value;	var ids = id;	var myElement = document.getElementById('bed_id');  	var url = 'index.php?option=com_farmapp&view=crops&task=findbeds&format=raw&val='+val+'&cropid='+ids;    var x = new Request({        url: url,        method: 'GET',        onSuccess: function(responseText){     	myElement.set('html', responseText);    }        }).send();}