<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_farmapp/models/fields">
		<field name="name" type="text" class="inputbox"
			size="40" label="Name"
			description="Name of Zone" required="true" />

		<field name="description" type="textarea" class="inputbox"
			size="40" label="Description"
			description="description" />
		
		<field name="farm" type="farms" class="inputbox"
			size="1" label="Farm"
			description="Select the farm" >
			<option
				value="0">Select</option>
		</field>
		
		<field
			name="status"
			type="list"
			label="JSTATUS"
			description="status of the zone"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>


		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="Language of the zone"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="id" type="text" default="0" label="Id"
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>


	</fieldset>

	<fields name="options">
		<fieldset name="joptions" label="Options">
			

         	</fieldset>
	</fields>

</form>
